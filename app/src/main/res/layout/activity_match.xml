<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bnb.volleyball.MatchActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/grdAwayBench"
        android:columnCount="4"
        android:background="#e6e6e6 ">

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp"/>
        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />

        <Button
            android:text="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />

        <Button
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />

    </GridLayout>

    <Button
        android:text="Undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUndo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lblAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/courtLayout"
        android:layout_centerHorizontal="true"
        android:text="AWAY"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/courtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingTop="16dp"
        android:layout_centerVertical="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParenLeft="true"
            android:id="@+id/grdAwayCourt"
            android:columnCount="3"
            android:background="@drawable/courtBackground">

            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp"/>
            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParenLeft="true"
            android:layout_below="@id/grdAwayCourt"
            android:id="@+id/grdHomeCourt"
            android:columnCount="3"
            android:background="@drawable/courtBackground">

            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp"/>
            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />
            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/roundCourtButton"
                android:textColor="@android:color/white"
                android:layout_margin="3dp" />

        </GridLayout>

        <TextView
            android:text="12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/txtAwayScore"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/scoreBackground"
            android:textSize="70sp"
            android:gravity="center"/>
        <Button
            android:text="POINT"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/txtAwayScore"
            android:layout_alignStart="@+id/txtHomeScore"
            android:id="@+id/btnAwayPoint"
            android:layout_alignParentEnd="true"
            android:background="#00b359 "
            android:textColor="@android:color/white" />

        <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/txtHomeScore"
            android:layout_below="@+id/grdAwayCourt"
            android:layout_alignParentRight="true"
            android:background="@drawable/scoreBackground"
            android:textSize="70sp"
            android:gravity="center"
            tools:text="5" />
        <Button
            android:text="POINT"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/txtHomeScore"
            android:layout_alignStart="@+id/txtHomeScore"
            android:id="@+id/btnHomePoint"
            android:layout_alignParentEnd="true"
            android:background="#00b359 "
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lblHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courtLayout"
        android:layout_centerHorizontal="true"
        android:text="HOME"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/grdHomeBench"
        android:columnCount="4"
        android:background="#e6e6e6 ">

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp"/>
        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />
        <Button
            android:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/roundBenchButton"
            android:textColor="@android:color/white"
            android:layout_margin="3dp" />

    </GridLayout>

</RelativeLayout>
